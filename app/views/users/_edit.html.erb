<div class="col-md-6 col-md-offset-3">
  <%= form_for(@user, url: url) do |f| %>
  <%= render 'shared/error_messages' %>
    <div class="col-md-12">
      <%= f.label :company_name %>
      <%= f.text_field :company_name, class: 'form-control' %>
    </div>
    <div class="col-md-6">
      <%= f.label :firstname, "First name" %>
      <%= f.text_field :firstname, class: 'form-control' %>
    </div>
    <div class="col-md-6">
      <%= f.label :lastname, "Last name"%>
      <%= f.text_field :lastname, class: 'form-control' %>
    </div>
    <div class="col-md-12">
      <%= f.label :username, "User name" %>
      <%= f.text_field :username, class: 'form-control' %>

      <%= f.label :email, "Email address" %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password, "Password" %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Re-enter password" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
    </div>
    <div class="col-md-8 col-md-offset-2">
      <div class="form-button">
        <%= f.submit yield(:button_text), class: "btn btn-info btn-block" %>
      </div>
    </div>
 </div>
<% end %>
    <p><%= link_to "Delete my account", destroy_path(id: @user.id), method: :delete,
                                data: { confirm: "Are you sure?" } %></p>
