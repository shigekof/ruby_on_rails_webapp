<div class="col-md-6 col-md-offset-3">
  <%= form_for(@user, url: url) do |f| %>
  <%= render 'shared/error_messages' %>

    <div class="col-md-6">
      <%= f.label :firstname, "First name" %>
      <%= f.text_field :firstname, class: 'form-control' %>
    </div>

    <div class="col-md-6">
      <%= f.label :lastname, "Last name"%>
      <%= f.text_field :lastname, class: 'form-control' %>
    </div>

    <div class="col-md-12">
      <%= f.label :username, "User name" %>
      <%= f.text_field :username, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Re-enter password" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= check_box_tag :terms_and_condiions %>
      <%= label_tag :terms_and_condiions, ("I agree to #{ link_to "Terms and conditions", terms_path } and #{ link_to "Privacy policies", privacy_policy_path }.").html_safe %>

      <div class="form-button">
        <%= f.submit yield(:button_text), class: "btn btn-info btn-block", id: "submit" %>
      </div>
    </div>
  <% end %>
</div>
